<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7C50E">

            <ImageView
                android:id="@+id/euroimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_baseline_euro_25"/>

            <TextView
                android:layout_width="190dp"
                android:layout_height="77dp"
                android:layout_alignEnd="@id/euroimg"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_marginEnd="-205dp"
                android:text="Base EUR"
                android:textColor="#000"
                android:textSize="35dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/lastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Update: "
        android:textSize="20dp"
        android:layout_gravity= "start"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop = "3dp">
    //--------------------------first CardView----------------------
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#535A72">

            <ImageView
                android:id="@+id/usdimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_dollar_symbol__1_"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@id/usdimage"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="-106dp"
                android:text="USD"
                android:textColor="#F5F7FF"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/usdstat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line_2"
                android:layout_alignEnd="@id/usdimage"
                android:layout_alignTop="@id/name"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="-56dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usdnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current  -  3,185 USD"
                    android:textColor="#F5F7FF"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/usdprew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous -  3,185 USD"
                    android:textColor="#F5F7FF"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    //--------------------------second CardView----------------------
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F7FF">

            <ImageView
                android:id="@+id/tryimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_turkish_lira"/>

            <TextView
                android:id="@+id/name1"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@id/tryimage"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="-106dp"
                android:text="TRY"
                android:textColor="#535A72"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/trystat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line_2"
                android:layout_alignEnd="@id/tryimage"
                android:layout_alignTop="@id/name1"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="-56dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/trynow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current  -  3,185 TRY"
                    android:textColor="#535A72"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tryprew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous -  3,185 TRY"
                    android:textColor="#535A72"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    //--------------------------third CardView----------------------
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#535A72">

            <ImageView
                android:id="@+id/jpg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="17.5dp"
                android:background="@drawable/ic_yen_symbol"/>

            <TextView
                android:id="@+id/name2"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@id/jpg"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="-106dp"
                android:text="JPY"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/jpystat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line_2"
                android:layout_alignEnd="@id/jpg"
                android:layout_alignTop="@id/name2"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="-56dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jpynow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current  -  3,185 JPY"
                    android:textColor="#F5F7FF"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/jpyprew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous -  3,185 JPY"
                    android:textColor="#F5F7FF"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>